{
  "name": "vite-electron-typescript-template",
  "version": "0.0.0",
  "main": "dist/backend/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"npm run start:vue\" \"npm run start:electron\"",
    "start:vue": "vite",
    "start:electron": "wait-on tcp:3000 && electron index.js",
    "build": "npm run clean && npm run build:vue && npm run build:electron",
    "build:vue": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json && electron-builder",
    "clean": "node scripts/clean.js",
    "lint": "eslint --env browser,node --ext .js,.ts --ignore-pattern \"*.d.*\" --fix scripts src ."
  },
  "dependencies": {
    "vue": "~3.0.11",
    "vue-router": "~3.5.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "~4.26.0",
    "@typescript-eslint/parser": "~4.26.0",
    "@vitejs/plugin-vue": "~1.2.3",
    "@vue/compiler-sfc": "~3.0.11",
    "@vue/eslint-config-prettier": "~6.0.0",
    "@vue/eslint-config-typescript": "~7.0.0",
    "concurrently": "~6.2.0",
    "cross-env": "~7.0.3",
    "electron": "~13.1.1",
    "electron-builder": "~22.10.5",
    "eslint": "~7.28.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-prettier": "~3.4.0",
    "eslint-plugin-vue": "~7.10.0",
    "prettier": "~2.3.1",
    "sass": "~1.34.1",
    "ts-node": "~10.0.0",
    "typescript": "~4.3.2",
    "vite": "~2.3.6",
    "wait-on": "~5.3.0"
  },
  "build": {
    "appId": "your.id",
    "win": {
      "target": "NSIS"
    },
    "files": [
      "dist/backend/**/*",
      "dist/frontend/**/*"
    ],
    "directories": {
      "output": "dist/release"
    }
  }
}
