# Editor configuration, see https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
max_line_length = 120
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2
